<Window x:Class="homework1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="uxContainer">
        <TextBlock Width="100" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,100,0,0">Enter Name</TextBlock>
        <TextBox x:Name="uxName" TextChanged="UxName_TextChanged" Width="200" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,5,0,0"></TextBox>
        <TextBlock Width="100" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,10,0,0">Enter Password</TextBlock>
        <TextBox x:Name="uxPassword"  Width="200" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,5,0,0" TextChanged="UxPassword_TextChanged"></TextBox>
        <Button x:Name="uxSubmit"  Width="100" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,20,0,0" IsEnabled="False">Submit</Button>
    </StackPanel>
</Window>
